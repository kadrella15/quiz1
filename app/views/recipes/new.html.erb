<div class="booyah-box col-10 offset-1">
  <h1>Enter Your Recipe</h1>
  <br />
    <%= simple_form_for @recipe do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :ingredients %>
      <%= f.input :directions %>
      <br />
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    <% end %>
    <br />
    <%= link_to 'Back', root_path %>
    <br />
</div>
